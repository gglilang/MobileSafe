<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lilang="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#8866ff00"
        android:gravity="center"
        android:text="设置中心"
        android:textColor="#000000"
        android:textSize="22sp" />
    <com.lilang.mobilesafe.ui.SettingItemView
        lilang:title1="设置自动更新"
        lilang:desc_on="自动更新已经开启"
        lilang:desc_off="自动更新已经关闭"
        android:id="@+id/siv_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></com.lilang.mobilesafe.ui.SettingItemView>

    <com.lilang.mobilesafe.ui.SettingItemView
        lilang:title1="设置显示号码归属地"
        lilang:desc_on="显示号码归属地已经开启"
        lilang:desc_off="显示号码归属地已经关闭"
        android:id="@+id/siv_show_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></com.lilang.mobilesafe.ui.SettingItemView>

    <com.lilang.mobilesafe.ui.SettingClickView
        android:id="@+id/scv_changebg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></com.lilang.mobilesafe.ui.SettingClickView>

    <com.lilang.mobilesafe.ui.SettingItemView
        lilang:title1="黑名单拦截设置"
        lilang:desc_on="黑名单拦截已经开启"
        lilang:desc_off="黑名单拦截已经关闭"
        android:id="@+id/siv_callsms_safe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></com.lilang.mobilesafe.ui.SettingItemView>

    <com.lilang.mobilesafe.ui.SettingItemView
        lilang:title1="程序锁设置"
        lilang:desc_on="看门狗已经开启"
        lilang:desc_off="看门狗已经关闭"
        android:id="@+id/siv_watch_dog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></com.lilang.mobilesafe.ui.SettingItemView>


</LinearLayout>